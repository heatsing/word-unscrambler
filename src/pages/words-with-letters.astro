---
import Layout from '@/layouts/Layout.astro';
import { getMeta } from '@/lib/meta';

const meta = getMeta(
  '/words-with-letters',
  'Words With Letters',
  'Find words that contain a certain letter. Pick word length (2–10) and letter to see the full list. No sign-up. Works for Wordle, Scrabble, and puzzles.'
);

const lengths = [2, 3, 4, 5, 6, 7, 8, 9, 10];
const letters = 'abcdefghijklmnopqrstuvwxyz'.split('');
---

<Layout meta={meta}>
  <section class="text-center mb-10">
    <h1 class="text-4xl font-bold mb-4 text-foreground">Words With Letters</h1>
    <p class="text-lg text-muted-foreground max-w-2xl mx-auto leading-relaxed">
      Find words that contain a specific letter. Choose a word length below, then pick a letter to see all words of that length containing the letter.
    </p>
  </section>

  <section class="mb-12" aria-labelledby="by-length-heading">
    <h2 id="by-length-heading" class="text-xl font-bold mb-6 text-foreground">Browse by word length</h2>
    <div class="space-y-8">
      {lengths.map((len) => (
        <div>
          <h3 class="text-sm font-semibold text-muted-foreground uppercase tracking-wider mb-3">{len}-letter words containing</h3>
          <ul class="flex flex-wrap gap-2 list-none pl-0">
            {letters.map((l) => (
              <li>
                <a
                  href={`/${len}-letter-words-with-${l}`}
                  class="inline-flex items-center justify-center min-w-[2.5rem] h-10 rounded-lg border border-border bg-card font-semibold uppercase text-primary hover:bg-muted hover:border-primary transition-colors"
                >
                  {l}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <p class="text-sm text-muted-foreground text-center mb-8">
    Also see <a href="/words-by-length" class="text-primary hover:underline">Words By Length</a>, <a href="/words-start-with" class="text-primary hover:underline">Words Start With</a>, and <a href="/words-ending-in" class="text-primary hover:underline">Words Ending In</a>.
  </p>

  <article class="p-6 rounded-lg border border-border bg-card">
    <h2 class="text-lg font-bold mb-3 text-foreground">About Words With Letters</h2>
    <p class="text-muted-foreground leading-relaxed">
      Use this index to find words that contain a certain letter. Pick a word length (2–10 letters), then choose a letter to see the full list. Useful for Scrabble, Wordle, crosswords, and vocabulary. You can also use our <a href="/unscramble" class="text-primary hover:underline">Unscramble</a> tool to find words from your own letters.
    </p>
  </article>
</Layout>
