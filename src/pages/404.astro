---
import Layout from '@/layouts/Layout.astro';
import { getMeta } from '@/lib/meta';

const meta = getMeta('/404', 'Page Not Found', 'The page you are looking for does not exist.', { noindex: true });
---
<Layout meta={meta}>
  <section class="text-center py-12">
    <h1 class="text-4xl font-bold mb-4 text-foreground">Page Not Found</h1>
    <p class="text-muted-foreground mb-8">The page you are looking for does not exist or has been moved.</p>
    <a href="/" class="btn btn-primary">Back to Home</a>
    <p class="mt-6 text-sm text-muted-foreground">
      Try our <a href="/unscramble" class="text-primary hover:underline">Unscramble</a> or <a href="/word-unscrambler" class="text-primary hover:underline">Word Unscrambler</a>.
    </p>
  </section>
</Layout>
