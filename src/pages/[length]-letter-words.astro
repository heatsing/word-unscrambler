---
import Layout from '@/layouts/Layout.astro';
import InternalLinks from '@/components/InternalLinks.astro';
import { getMeta } from '@/lib/meta';

export function getStaticPaths() {
  return [2, 3, 4, 5, 6, 7, 8, 9, 10].map((length) => ({
    params: { length: length.toString() },
    props: { length },
  }));
}

const { length } = Astro.props;
const meta = getMeta(`/${length}-letter-words`, `${length} Letter Words`, `Browse ${length}-letter words. Useful for Wordle, Scrabble, Words with Friends, and word games.`);
---

<Layout meta={meta}>
  <article>
    <h1 class="text-4xl font-bold mb-4">{length} Letter Words</h1>
    <p class="text-lg text-gray-600 mb-8">
      Browse our list of {length}-letter words. Use the <a href="/unscramble" class="text-primary hover:underline">Unscramble</a> tool to find words from your letters, or <a href="/words-by-length" class="text-primary hover:underline">Words By Length</a> to explore other lengths.
    </p>
  </article>
  <InternalLinks />
</Layout>
