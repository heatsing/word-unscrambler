---
import Layout from '@/layouts/Layout.astro';
import InternalLinks from '@/components/InternalLinks.astro';
import { getMeta } from '@/lib/meta';

interface Props {
  path: string;
  title: string;
  description: string;
}
const { path, title, description } = Astro.props;
const meta = getMeta(path, title, description);
---

<Layout meta={meta}>
  <article>
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <div class="text-gray-600 text-lg mb-8">
      <slot />
    </div>
  </article>
  <InternalLinks />
</Layout>
