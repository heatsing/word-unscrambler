---
interface Props {
  /** Page title, e.g. "Words Ending In" */
  title: string;
  /** Form submit base path for search (e.g. /unscramble) */
  searchAction?: string;
}
const { title, searchAction = '/unscramble' } = Astro.props;
---

<div class="words-search-hero bg-white rounded-2xl shadow-sm border border-gray-200 p-6 sm:p-8 md:p-10">
  <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 text-center mb-2">{title}</h1>
  <p class="text-center text-gray-600 mb-6">
    Enter up to 3 wildcards (<span class="text-primary font-medium underline decoration-primary/40">?</span> or <span class="text-primary font-medium underline decoration-primary/40">space</span>).
  </p>

  <form action={searchAction} method="get" class="max-w-2xl mx-auto" id="words-search-hero-form">
    <div class="mb-6">
      <label for="hero-letters" class="sr-only">Your letters</label>
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400" aria-hidden="true">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
        </span>
        <input
          id="hero-letters"
          type="text"
          name="q"
          placeholder="YOUR LETTERS"
          maxlength="15"
          class="w-full h-14 pl-12 pr-4 rounded-xl border border-gray-300 bg-white text-gray-900 placeholder:text-gray-400 text-lg font-medium focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          autocomplete="off"
        />
      </div>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 p-5 sm:p-6 space-y-4">
      <div class="grid grid-cols-2 gap-3 sm:gap-4">
        <div class="flex flex-col gap-1">
          <label for="hero-starts" class="text-sm font-medium text-gray-700 flex items-center gap-1">
            Starts
            <span class="text-gray-400 cursor-help" title="Letters the word must start with">?</span>
          </label>
          <input id="hero-starts" type="text" name="starts" placeholder="" maxlength="5" class="h-10 rounded-full border border-gray-300 bg-gray-50 px-4 text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/30" />
        </div>
        <div class="flex flex-col gap-1">
          <label for="hero-ends" class="text-sm font-medium text-gray-700 flex items-center gap-1">
            Ends
            <span class="text-gray-400 cursor-help" title="Letters the word must end with">?</span>
          </label>
          <input id="hero-ends" type="text" name="ends" placeholder="" maxlength="5" class="h-10 rounded-full border border-gray-300 bg-gray-50 px-4 text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/30" />
        </div>
        <div class="flex flex-col gap-1">
          <label for="hero-contains" class="text-sm font-medium text-gray-700 flex items-center gap-1">
            Contains
            <span class="text-gray-400 cursor-help" title="Letters the word must contain">?</span>
          </label>
          <input id="hero-contains" type="text" name="contains" placeholder="" maxlength="10" class="h-10 rounded-full border border-gray-300 bg-gray-50 px-4 text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/30" />
        </div>
        <div class="flex flex-col gap-1">
          <label for="hero-length" class="text-sm font-medium text-gray-700 flex items-center gap-1">
            Length
            <span class="text-gray-400 cursor-help" title="Word length (e.g. 5)">?</span>
          </label>
          <input id="hero-length" type="text" name="length" placeholder="" maxlength="2" class="h-10 rounded-full border border-gray-300 bg-gray-50 px-4 text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/30" />
        </div>
        <div class="flex flex-col gap-1">
          <label for="hero-exclude" class="text-sm font-medium text-gray-700 flex items-center gap-1">
            Exclude
            <span class="text-gray-400 cursor-help" title="Letters not in the word">?</span>
          </label>
          <input id="hero-exclude" type="text" name="exclude" placeholder="" maxlength="10" class="h-10 rounded-full border border-gray-300 bg-gray-50 px-4 text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/30" />
        </div>
        <div class="flex flex-col gap-1">
          <label for="hero-include" class="text-sm font-medium text-gray-700 flex items-center gap-1">
            Include
            <span class="text-gray-400 cursor-help" title="Letters that must appear">?</span>
          </label>
          <input id="hero-include" type="text" name="include" placeholder="" maxlength="10" class="h-10 rounded-full border border-gray-300 bg-gray-50 px-4 text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/30" />
        </div>
      </div>

      <div class="flex flex-col gap-1">
        <label for="hero-dictionary" class="text-sm font-medium text-gray-700">Dictionary</label>
        <select id="hero-dictionary" name="dict" class="h-11 rounded-lg border border-gray-300 bg-gray-50 px-4 text-gray-900 focus:outline-none focus:ring-2 focus:ring-primary/30 appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%2224%22%20height%3D%2224%22%20viewBox%3D%220%200%2024%2024%22%20fill%3D%22none%22%20stroke%3D%22%236b7280%22%20stroke-width%3D%222%22%3E%3Cpath%20d%3D%22M6%209l6%206%206-6%22%2F%3E%3C%2Fsvg%3E')] bg-[length:1.25rem] bg-[right_0.5rem_center] bg-no-repeat pr-10">
          <option value="default">Words With Friends</option>
          <option value="scrabble">Scrabble</option>
          <option value="wordle">Wordle (5-letter)</option>
        </select>
      </div>

      <button
        type="submit"
        class="w-full h-12 rounded-xl bg-amber-400 hover:bg-amber-500 text-gray-900 font-bold text-sm uppercase tracking-wide transition-colors focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2"
      >
        Search
      </button>
    </div>
  </form>
</div>
