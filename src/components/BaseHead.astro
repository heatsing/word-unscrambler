---
import { ASSET_PATHS } from '@/lib/assets-version';

const SITE = 'https://wordunscrambler.cc';

interface Props {
  title: string;
  description: string;
  canonical: string;
  noindex?: boolean;
}
const { title, description, canonical, noindex = false } = Astro.props;
const fullTitle = title.includes('|') ? title : `${title} | Word Unscrambler`;
const origin = canonical.startsWith('http') ? new URL(canonical).origin : SITE;
const ogImage = `${origin}${ASSET_PATHS.ogImage}`;
---
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
<link rel="icon" type="image/svg+xml" href={ASSET_PATHS.icon} />
<link rel="apple-touch-icon" href={ASSET_PATHS.appleTouchIcon} />
<link rel="manifest" href="/manifest.json" />
<title>{fullTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />
<link rel="sitemap" type="application/xml" href={`${SITE}/sitemap-index.xml`} />
{noindex ? <meta name="robots" content="noindex, follow" /> : <meta name="robots" content="index, follow" />}
<meta name="googlebot" content="index, follow" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="Word Unscrambler" />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonical} />
<meta property="og:image" content={ogImage} />
<meta property="og:locale" content="en_US" />
