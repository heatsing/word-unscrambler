---
import { internalLinks } from '@/lib/internal-links';
---
<nav aria-label="Internal links" class="internal-links mt-8 pt-6 border-t border-border">
  <h2 class="text-sm font-semibold text-muted-foreground uppercase tracking-wider mb-3">Site links</h2>
  <ul class="flex flex-wrap gap-x-4 gap-y-1 text-sm">
    {internalLinks.map((link) => (
      <li>
        <a href={link.href} class="text-primary hover:underline">{link.label}</a>
      </li>
    ))}
  </ul>
</nav>
